server {
    listen       80;
    server_name  localhost;

    access_log /var/log/nginx/lighthouse_access.log;
    error_log  /var/log/nginx/lighthouse_error.log;

    location / {
        root   {{ install_dir }};
        index  index.html;
        try_files $uri $uri/ /index.html;
    }

    location /api/ {
        proxy_pass http://{{ clickhouse_internal_ip }}:8123/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        proxy_set_header X-ClickHouse-User "vector";
        proxy_set_header X-ClickHouse-Key {{ vault_clickhouse_password }};
    }
}